@model RegisterViewModel

@{
    ViewData["Title"] = "Register new Account";
}



<section class="account-section">
    <div class="container">
        <div class="title">Don't have an account yet? Please sign up below</div>

        <form id="formRegistration" asp-action="Register" method="post" enctype="multipart/form-data" novalidate>
            
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="name form-group">
                <label asp-for="FirstName"></label>
                <input id="firstname" type="text" asp-for="FirstName" onkeyup="validateField(this, 'firstNameError', validateRegisterName)" />
                <small><span id="firstNameError" asp-validation-for="FirstName" class="text-danger"></span></small>
            </div>
            <div class="lastname form-group">
                <label asp-for="LastName"></label>
                <input id="lastname" type="text" asp-for="LastName" onkeyup="validateField(this, 'lastNameError', validateRegisterName)" />
                <small><span id="lastNameError" asp-validation-for="LastName" class="text-danger"></span></small>
            </div>
            <div class="streetname form-group">
                <label asp-for="StreetName"></label>
                <input id="streetname" type="text" asp-for="StreetName"/>
            </div>
            <div class="postalcode form-group">
                <label asp-for="PostalCode"></label>
                <input id="postalcode" type="text" asp-for="PostalCode" />
            </div>
            <div class="city form-group">
                <label asp-for="City"></label>
                <input id="city" type="text" asp-for="City" />
            </div>
            <div class="phoneNumber form-group">
                <label asp-for="PhoneNumber"></label>
                <input id="phone" type="text" asp-for="PhoneNumber" />
            </div>
            <div class="companyName form-group">
                <label asp-for="CompanyName"></label>
                <input id="company" type="text" asp-for="CompanyName" />
            </div>
            <div class="email form-group">
                <label asp-for="Email"></label>
                <input id="email" type="email" asp-for="Email" onkeyup="validateField(this, 'emailError', validateEmail)" />
                <small><span id="emailError" asp-validation-for="Email" class="text-danger"></span></small>
            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input id="password" type="password" asp-for="Password" onkeyup="validateField(this, 'passwordError', validatePassword)" />
                <small><span id="PasswordError" asp-validation-for="Password" class="text-danger"></span></small>
            </div>
            <div class="confirm-password form-group">
                <label asp-for="ConfirmPassword"></label>
                <input id="confirm-password" type="password" asp-for="ConfirmPassword" onkeyup="validateField(this, 'confirmPasswordError', validateConfirmPassword)" />
                <small><span id="confirmPasswordError" asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
            </div>
            <div class="upload image form-group">
                <label asp-for="Image"></label>
                <input id="upload-image" type="file" asp-for="Image" onchange="validateField(this, 'uploadImageError', validateImage)" />
            </div>
            
            <div class="terms form-checkbox-group">
                <label asp-for="AcceptedTerms" class="account-checkbox">
                    I have read and accept the terms and agreements.
                    <input type="checkbox" checked="checked" asp-for="AcceptedTerms" onclick="validateField(this, 'acceptedTermsError', validateAcceptedTerms)">
                    <span id="acceptedTermsError" asp-validation-for="AcceptedTerms" class="text-danger checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">Submit <i class="fa-solid fa-paintbrush-fine"></i></button>
        </form>
      </div>
</section>




